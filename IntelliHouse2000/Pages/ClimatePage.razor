@page "/Climate"
@implements IDisposable

<PageTitle>Climate</PageTitle>


<div class="text-center container-fluid">
    <div class="row">
        <RadzenTabs TabPosition="TabPosition.Top" style="margin: 20px auto;" class="rz-shadow-6">
            <Tabs>
                <RadzenTabsItem Text="Kitchen">
                    <div class="row">
                        <div class="col-3">
                            <RadzenCard Class="rz-background-color-primary-lighter rz-shadow-8" style="margin: 10px">
                                <RadzenLabel Text="@languageTable["SeeHumid"]" /> <br />
                                <RadzenLabel Text="@APIClimateKitchen.Humid.ToString()" /><br /><br />

                                <RadzenLabel Text="@languageTable["SetHumid"]" /><br />
                                <RadzenNumeric @bind-Value="SetClimateKitchen.SetHumid" TValue="int" />
                                <RadzenButton Icon="add_circle_outline" style="margin: 5px" Text="@languageTable["Submit"]" ButtonStyle="ButtonStyle.Primary" class="rz-ripple" />

                            </RadzenCard>
                            <RadzenCard Class="rz-background-color-primary-lighter rz-shadow-8" style="margin: 10px">
                                <RadzenLabel Text="@languageTable["SeeTemp"]" /> <br />
                                <RadzenLabel Text="@APIClimateKitchen.Temp.ToString()" /><br /><br />

                                <RadzenLabel Text="@languageTable["SetTemp"]" /><br />
                                <RadzenNumeric @bind-Value="SetClimateKitchen.SetTemp" TValue="int" />
                                <RadzenButton Icon="add_circle_outline" style="margin: 5px" Text="@languageTable["Submit"]" ButtonStyle="ButtonStyle.Primary" class="rz-ripple" />

                            </RadzenCard>
                        </div>
                        <div class="col-2">
                            <RadzenCard>
                                <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3" Text="@languageTable["DatePicker"]" />
                                <RadzenDatePicker TValue="DateTime?" ShowTime="true" ShowSeconds="true" HoursStep="1" MinutesStep="5" SecondsStep="10" DateFormat="MM/dd/yyyy HH:mm" Class="w-100" /> @*Change=@(args => OnChange(args, "DatePicker with time", "MM/dd/yyyy HH:mm"))*@
                            </RadzenCard>
                        </div>
                        <div class="col-7">
                            <RadzenChart>
                                <RadzenLineSeries Smooth="true" Data="@APIClimatesKitchen" CategoryProperty="Timestamp" Title="Humid" ValueProperty="Humid">
                                    <RadzenMarkers MarkerType="MarkerType.Circle" />
                                    <RadzenSeriesDataLabels Visible="true" />
                                </RadzenLineSeries>
                                <RadzenLineSeries Smooth="true" Data="@APIClimatesKitchen" CategoryProperty="Timestamp" Title="Temp" ValueProperty="Temp">
                                    <RadzenMarkers MarkerType="MarkerType.Circle" />
                                    <RadzenSeriesDataLabels Visible="true" />
                                </RadzenLineSeries>

                                <RadzenValueAxis Min="0" Max="100">
                                    <RadzenGridLines Visible="true" />
                                </RadzenValueAxis>
                            </RadzenChart>

                        </div>
                    </div>
                </RadzenTabsItem>

